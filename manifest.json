{
    "manifest_version": 2,

    "name": "ebsv-extension-better-service-virtualization",
    "version": "0.1",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
    }],
    "web_accessible_resources" : [
        "listenInject.js",
        "bsvInject.js",
        "bsvConfigInject.js"
    ],
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ]
}
